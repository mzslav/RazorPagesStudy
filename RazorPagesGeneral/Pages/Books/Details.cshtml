@page
@model RazorPagesGeneral.Pages.Books.DetailsModel
@{
    ViewData["Titel"] = "Book Details";
    var photoPath = $"/images/{Model.Book.PhotoPath ?? "noimage.png"}";
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow" style="margin-top: 3rem;">


            <div class="card-header cardHeaderStyle">
                <h1>@Model.Book.Name</h1>
            </div>

            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftloating">Book ID: @Model.Book.Id</h4><hr />
                        <h4 class="cardTextLeftloating">Gatunek: @Model.Book.Department</h4><hr />
                        <h4 class="cardTextLeftloating">Autor: @Model.Book.Author</h4><hr />
                        <h4 class="cardTextLeftloating">Opis: @Model.Book.Description</h4><hr />
                    </div>
                    <div class="col col-lg-3">
                        <div style="border-right: 1px solid rgba(0,0,0,0.1);">
                            <img class="card imageThumbnail border border-primary" style="background-color: #d1e7ff;" src="@photoPath" asp-append-version="true" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: rgba(0,0,0,0.25)">
                            <a asp-page="Books" class="btn btn-success buttonShadow">Wróć</a>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">

        @*  @await Component.InvokeAsync("HeadCount", new{ department = Model.Book.Department }) *@
        <vc:head-count department="@Model.Book.Department"></vc:head-count>

    </div>
</div>
