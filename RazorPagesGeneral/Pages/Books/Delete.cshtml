@page "{id}"
@model RazorPagesGeneral.Pages.Books.DeleteModel
@{
    ViewData["Title"] = "Delete";
    ViewData["ShowButtons"] = false;
}

<h1 class="text-center">Delete Confirmation</h1>
<div class="alert alert-danger">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <partial name="_DisplayBookPartial" model="Model.Book" view-data="ViewData" />
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <div class="text-center text-secondary">
                <hr />
                <h4>Book ID: <span class="text-primary">@Model.Book.Id</span></h4>
                <hr />
                <h4>Autor: <span class="text-primary">@Model.Book.Author</span></h4>
                <hr />
                <h4>Gatunek: <span class="text-primary">@Model.Book.Department</span></h4>
                <hr />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <h5>Czy na pewno chcesz usunąć książkę - @Model.Book.Name ?</h5>
            <form method="post">
                <input type="hidden" name="id" value="@Model.Book.Id" />
                <button type="submit" class="btn btn-danger">Tak</button>
                <a asp-page="Books" class="btn btn-success">Wróć</a>
            </form>
        </div>
    </div>
</div>
